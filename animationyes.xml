<theme>
   <formatVersion>7</formatVersion>

     <view name="system">
     <image name="logo">
       <linearSmooth>true</linearSmooth>
	   <storyboard event="activate" repeatAt="1">
	   <animation property="opacity" to="1" begin="0" duration="0" mode="linear"/>
	   <animation property="scale" from="1.1" to="1.2" begin="0" duration="1000" mode="easeOut"/>
	   <animation property="scale" from="1.2" to="1.1" begin="1000" duration="1000" mode="easeOut"/>
	   </storyboard>
	   </image>   
       </view>

     <view name="gamecarousel">
 	<image name="md_marquee" extra="true">		 
		<storyboard> 
        <animation property="scale" to="1.06" begin="600" autoreverse="true" duration="1000" repeat="forever" mode="easyIn"/>
		<animation property="rotation" from= "-1.2" to="1.5" begin="600" autoreverse="true" duration="1200" repeat="forever" mode="easyIn"/>
		</storyboard>		
      </image> 
	<image name="system-background" extra="true">		 
		<storyboard>
        <animation property="x" from="1.3" to="0.74" duration="600" autoreverse="false" begin="0"/>			
        <animation property="scale" to="1.06" begin="600" autoreverse="true" duration="1200" repeat="forever" mode="easyIn"/>
		<animation property="rotation" from= "1" to="-2" begin="600" autoreverse="true" duration="1200" repeat="forever" mode="easyIn"/>
		</storyboard>		
      </image> 
	 <video name="backgroundvideo" extra="true">
        <storyboard>
        <animation property="opacity" from="0" to="1" duration="100" mode="easeIn"/>
        <animation property="scale" from="0.8" to="1" duration="200" mode="easeOut"/>
        </storyboard>
     </video>
	 <image name="backgroundvideoborder" extra="true">
        <storyboard>
        <animation property="opacity" from="0" to="1" duration="550" mode="easeIn"/>
        <animation property="scale" from="0" to="1" duration="350" mode="easeOut"/>
        </storyboard>
     </image>
	<image name="md_thumbnail" extra="true">		 
		<storyboard> 	
        <animation property="scale" to="1.04" begin="600" autoreverse="true" duration="1400" repeat="forever" mode="easyIn"/>
		<animation property="rotation" from= "-1" to="1" begin="600" autoreverse="true" duration="1400" repeat="forever" mode="easyIn"/>
		</storyboard>		
      </image> 	  
   </view>   
	   
     <view name="video,basic,detailed">
 	<image name="system-background2" extra="true">		 
		<storyboard> 
          <animation property="scale" to="1.04" begin="600" autoreverse="true" duration="1800" repeat="forever" mode="easyIn"/>
		<animation property="rotation" to="-1" begin="600" autoreverse="true" duration="1800" repeat="forever" mode="easyIn"/>
		</storyboard>		
      </image>
 	<image name="logo" extra="true">		 
		<storyboard> 
          <animation property="scale" to="1.06" begin="600" autoreverse="true" duration="1000" repeat="forever" mode="easyIn"/>
		<animation property="rotation" from= "-1.2" to="1.5" begin="600" autoreverse="true" duration="1200" repeat="forever" mode="easyIn"/>
		</storyboard>		
      </image> 		  
   </view> 
     <view name="grid">
 	<image name="background2" extra="true">		 
		<storyboard> 
          <animation property="scale" to="1.04" begin="600" autoreverse="true" duration="1800" repeat="forever" mode="easyIn"/>
		<animation property="rotation" to="-1" begin="600" autoreverse="true" duration="1800" repeat="forever" mode="easyIn"/>
		</storyboard>		
      </image>
 	<image name="logo" extra="true">		 
		<storyboard> 
          <animation property="scale" to="1.06" begin="600" autoreverse="true" duration="1000" repeat="forever" mode="easyIn"/>
		<animation property="rotation" from= "-1.2" to="1.5" begin="600" autoreverse="true" duration="1200" repeat="forever" mode="easyIn"/>
		</storyboard>		
      </image> 
 	<image name="md_marquee" extra="true">		 
		<storyboard> 
          <animation property="scale" to="1.06" begin="600" autoreverse="true" duration="1000" repeat="forever" mode="easyIn"/>
		<animation property="rotation" from= "-1.2" to="1.5" begin="600" autoreverse="true" duration="1200" repeat="forever" mode="easyIn"/>
		</storyboard>		
      </image> 
   </view>    
    </theme>
